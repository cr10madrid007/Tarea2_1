<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tarea2_1.views.list">
    <ContentPage.Content>
        <StackLayout>
            <ListView   x:Name="ListaEmpleados" ItemSelected="ListaEmpleados_ItemSelected" HeightRequest="200">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell >
                            <StackLayout  Orientation="Vertical" >
                                <StackLayout Orientation="Horizontal" >
                                    <Image Source="{Binding flags.png}" WidthRequest="50" HeightRequest="50" />
                                    <Label Text="{Binding name.common}"  />
                                    <Label Text="{Binding latlng[0]}"  />
                                    <Label Text="{Binding latlng[1]}"  />
                                    




                                </StackLayout>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>



        </StackLayout>
    </ContentPage.Content>
</ContentPage>