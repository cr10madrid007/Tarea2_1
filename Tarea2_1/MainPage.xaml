             x:Class="Tarea2_1.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="TAREA 2.1" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>


        <Button x:Name="btnAfrica" Text="Africa" Clicked="btnAfrica_Clicked"/>
        <Button x:Name="btnAmerica" Text="America" Clicked="btnAmerica_Clicked"/>
        <Button x:Name="btnAsia" Text="Asia" Clicked="btnAsia_Clicked"/>
        <Button x:Name="btnEuropa" Text="Europa" Clicked="btnEuropa_Clicked"/>
        <Button x:Name="btnOseania" Text="Oceania" Clicked="btnOseania_Clicked"/>
    </StackLayout>

</ContentPage>
